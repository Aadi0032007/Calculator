<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="15dp"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/rslt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:isScrollContainer="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbars="none"
            android:scrollHorizontally="false"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="25sp"
            app:autoSizeTextType="uniform" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="348dp"
            android:layout_marginLeft="2.5pt"
            android:layout_marginTop="2.5pt"
            android:layout_marginRight="2.5pt"
            android:padding="2pt"
            android:paddingBottom="5pt">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="20pt">

                <Button
                    android:id="@+id/clr"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#FF0303"
                    android:longClickable="true"
                    android:text="⌫"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/root"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#FF1A75"
                    android:text="%"
                    android:textColor="#00E58A"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#FF3385"
                    android:text="^"
                    android:textColor="#00E58A"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#ffcc99"
                    android:text="/"
                    android:textColor="#9C003F"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#ffb366"
                    android:fontFamily="sans-serif"
                    android:text="×"
                    android:textAllCaps="false"
                    android:textColor="#9C003F"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/subs"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#ff9933"
                    android:text="-"
                    android:textColor="#9C003F"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="109dp">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#FF8000"
                    android:text="+"
                    android:textColor="#9C003F"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <Button
                    android:id="@+id/dot"
                    android:layout_width="71dp"
                    android:layout_height="41dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="0"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#ff0066"
                    android:paddingRight="5dp"
                    android:text="."
                    android:textColor="#00E58A"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt0"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="0"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#333333"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_margin="1.5pt"
                    android:layout_weight="1"
                    android:background="@drawable/circle_button"
                    android:backgroundTint="#03F40E"
                    android:text="="
                    android:textColor="#9C003F"
                    android:textSize="30sp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>